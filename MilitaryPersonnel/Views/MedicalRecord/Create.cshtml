@model Domain.Models.MedicalRecord

@{
    ViewData["Title"] = "Create Medical Record";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ServicemanId, "Select Serviceman", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-5">
                @Html.DropDownListFor(
                         model => model.ServicemanId,
                         new SelectList(ViewBag.ServicemanList, "ServicemanId", "ServicemanFullName"),
                         "Select Serviceman",
                         new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ServicemanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MedicalCondition, "Enter Medical Condition", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.MedicalCondition, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MedicalCondition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RecordDate, "Enter Record Date", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.RecordDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.RecordDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}