@model Domain.Models.MobilizationListEntry

@{
    ViewData["Title"] = "Delete Mobilization List Entry";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <div class="col-md-10">
            <h2>Are you sure you want to delete this mobilization list entry?</h2>

            <dl class="dl-horizontal">
                <div class="form-group">
                    <dt class="col-sm-2">Mobilization List</dt>
                    <dd class="form-control-static">@Model.MobilizationListName</dd>
                </div>
                <div class="form-group">
                    <dt class="col-sm-2">Serviceman</dt>
                    <dd class="form-control-static">@Model.ServicemenFullName</dd>
                </div>
            </dl>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", new { mobilizationListId = Model.MobilizationListId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}