@model Domain.Models.ContactInfo

@{
    ViewData["Title"] = "Delete Contact Info";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <div class="col-md-10">
            <h2>Are you sure you want to delete this contact information?</h2>

            <dl class="dl-horizontal">
                <div class="form-group">
                    <dt class="col-sm-2">Serviceman</dt>
                    <dd class="form-control-static">@Model.ServicemanFullName</dd>
                </div>
                <div class="form-group">
                    <dt class="col-sm-2">Phone</dt>
                    <dd class="form-control-static">@Model.Phone</dd>
                </div>
                <div class="form-group">
                    <dt class="col-sm-2">Email</dt>
                    <dd class="form-control-static">@Model.Email</dd>
                </div>
                <div class="form-group">
                    <dt class="col-sm-2">Address</dt>
                    <dd class="form-control-static">@Model.Address</dd>
                </div>
            </dl>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}