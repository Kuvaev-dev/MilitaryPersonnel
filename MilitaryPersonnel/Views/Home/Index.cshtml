@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card mt-5" style="border-color: #333333;">
    <div class="card-header" style="background-color: #2F4F4F; color: #BDB76B;">
        <h4>Welcome, @ViewBag.UserName</h4>
    </div>
    <div class="card-body">
        <p>You are logged in as: <strong>@ViewBag.Role</strong></p>
        <p>Use the sidebar to navigate through the Military Personnel AIS.</p>
        <a asp-action="Logout" class="btn btn-danger" style="background-color: #8B0000; border-color: #8B0000;">Logout</a>
    </div>
</div>