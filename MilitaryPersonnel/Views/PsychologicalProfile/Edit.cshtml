@model Domain.Models.PsychologicalProfile

@{
    ViewData["Title"] = "Edit Psychological Profile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ServicemanId, "Select New Serviceman", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-5">
                @Html.DropDownListFor(
                         model => model.ServicemanId,
                         new SelectList(ViewBag.ServicemanList, "ServicemanId", "ServicemanFullName"),
                         "Select Serviceman",
                         new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ServicemanId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProfileDescription, "Enter New Profile Description", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-5">
                @Html.TextAreaFor(model => model.ProfileDescription, new { @class = "form-control", rows = "5" })
                @Html.ValidationMessageFor(model => model.ProfileDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AssessmentDate, "Enter New Assessment Date", htmlAttributes: new { @class = "control-label col-md-10" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.AssessmentDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                @Html.ValidationMessageFor(model => model.AssessmentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-success" />
                @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}