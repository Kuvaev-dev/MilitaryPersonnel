@model IEnumerable<Domain.Models.DocumentFlow>

@{
    ViewData["Title"] = "Document Flow";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- Tables Sorting -->
<link href="https://cdn.datatables.net/1.11.6/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery/jquery.js"></script>
<script src="https://cdn.datatables.net/1.11.6/js/jquery.dataTables.min.js"></script>

<style>
    #dataTable_filter input[type="search"] {
        width: 15rem;
    }

    .gost-document {
        font-family: 'Times New Roman', Times, serif;
        font-size: 14pt;
        line-height: 1.5;
        margin: 20mm 10mm 20mm 30mm;
    }
</style>

<div class="card card-default col-md-12 gost-document">
    <div class="card-header">
        @Html.ActionLink("Create New Document", "CreateDocumentFlow", null, new { @style = "float:left;", @class = "btn btn-success" })
        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>
    </div>
    <div class="card-body">
        <div class="table-responsive bootgrid">
            <table class="table table-striped table-bordered table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.DocumentType)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
                        <th>@Html.DisplayNameFor(model => model.Status)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="dataTable">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.DocumentType)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedBy)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td class="btn btn-group">
                                @Html.ActionLink("Edit", "EditDocumentFlow", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "DetailsDocumentFlow", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "DeleteDocumentFlow", new { id = item.Id }, new { @class = "btn btn-danger" })
                                @Html.ActionLink("Assign", "AssignDocument", new { id = item.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Resolve", "ResolveDocument", new { id = item.Id }, new { @class = "btn btn-secondary" })
                                @Html.ActionLink("History", "ViewDocumentHistory", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Approve", "ApproveDocument", new { id = item.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Reject", "RejectDocument", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#dataTable').DataTable({
            "columnDefs": [{ "orderable": false, "targets": [1, 2, 3, 4, 5, 6] }],
            "lengthMenu": [[5, 10, 25, 50, 75, 100, 150, 200, -1], [5, 10, 25, 50, 75, 100, 150, 200, "All"]],
        });
    });
</script>