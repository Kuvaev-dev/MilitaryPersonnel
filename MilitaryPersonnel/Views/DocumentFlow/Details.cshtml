@model Domain.Models.DocumentFlow

@{
    ViewData["Title"] = "Document Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                Title
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt>
                Content
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt>
                Document Type
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DocumentType)
            </dd>
            <dt>
                Created By
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedBy)
            </dd>
            <dt>
                Serviceman Full Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ServicemanFullName)
            </dd>
            <dt>
                Military Unit
            </dt>
            <dd>
                @Html.DisplayFor(model => model.MilitaryUnit)
            </dd>
            <dt>
                Created Date
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt>
                Status
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>
