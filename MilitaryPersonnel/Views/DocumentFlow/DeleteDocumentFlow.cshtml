@model Domain.Models.DocumentFlow

@{
    ViewData["Title"] = "Delete Document Flow";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .gost-document {
        font-family: 'Times New Roman', Times, serif;
        font-size: 14pt;
        line-height: 1.5;
        margin: 20mm 10mm 20mm 30mm;
    }
</style>

<div class="gost-document">
    <h2>Видалити документ</h2>
    <h3>Ви впевнені, що хочете видалити цей документ?</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-horizontal">
            <dl class="dl-horizontal">
                <dt>@Html.DisplayNameFor(model => model.Title)</dt>
                <dd>@Html.DisplayFor(model => model.Title)</dd>
                <dt>@Html.DisplayNameFor(model => model.DocumentType)</dt>
                <dd>@Html.DisplayFor(model => model.DocumentType)</dd>
                <dt>@Html.DisplayNameFor(model => model.CreatedBy)</dt>
                <dd>@Html.DisplayFor(model => model.CreatedBy)</dd>
                <dt>@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                <dd>@Html.DisplayFor(model => model.CreatedDate)</dd>
                <dt>@Html.DisplayNameFor(model => model.Status)</dt>
                <dd>@Html.DisplayFor(model => model.Status)</dd>
            </dl>

            <div class="form-group">
                <input type="submit" value="Видалити" class="btn btn-danger" />
                @Html.ActionLink("Назад до списку", "DocumentFlow", null, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>