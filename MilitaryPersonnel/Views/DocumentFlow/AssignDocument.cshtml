@model Domain.Models.DocumentAssignment

@{
    ViewData["Title"] = "Assign Document";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2 class="text-danger">@ViewBag.Message</h2>
        <h2 class="text-danger">@ViewBag.ErrorMessage</h2>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DocumentId)

        <div class="form-group">
            @Html.LabelFor(model => model.AssigneeId, "Assign To", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-5">
                @Html.DropDownListFor(
                         model => model.AssigneeId,
                         new SelectList(ViewBag.AssigneeList, "Id", "FullName"),
                         "-- Select Assignee --",
                         new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AssigneeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Assign" class="btn btn-success" />
                @Html.ActionLink("Back to List", "DocumentFlow", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}