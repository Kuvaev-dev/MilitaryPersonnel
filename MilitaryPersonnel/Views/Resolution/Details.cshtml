@model Domain.Models.Resolution

@{
    ViewData["Title"] = "Resolution Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="form-horizontal">
    <div class="col-md-10">
        <dl class="dl-horizontal">
            <dt>
                Document
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DocumentTitle)
            </dd>
            <dt>
                Author
            </dt>
            <dd>
                @Html.DisplayFor(model => model.AuthorFullName)
            </dd>
            <dt>
                Resolution Text
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ResolutionText)
            </dd>
            <dt>
                Resolution Date
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ResolutionDate)
            </dd>
        </dl>
        <div class="form-group">
            <div class="col-md-offset-2">
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>