@model Domain.Models.DocumentFlow

@{
    ViewData["Title"] = "Наказ щодо особового складу";
    ViewData["DocumentTitle"] = "НАКАЗ";
    ViewData["DocumentSubtitle"] = "Щодо особового складу";
    Layout = null;
}

<link href="~/css/DocumentContent.css" rel="stylesheet" />

@await Html.PartialAsync("_DocumentHeader", Model)

<div class="content">
    <p>На підставі:</p>
    <p style="text-indent: 10mm;">@Model.Content</p>
    <p style="margin-top: 10mm;">Тип документа: @Model.DocumentType</p>
    <p style="margin-top: 10mm;">НАКАЗУЮ:</p>
    <ol>
        <li>Виконати дії щодо особового складу для @Model.ServicemanFullName.</li>
        <li>Забезпечити виконання наказу з @(Model.CreatedDate?.ToString("dd.MM.yyyy")).</li>
    </ol>
</div>

<div class="footer">
    <div class="signature">
        <div>
            <p>Командир військової частини</p>
            <p style="margin-top: 10mm;">________________ @Model.CreatedBy</p>
        </div>
        <div style="text-align: right;">
            <p>"@Model.CreatedDate?.ToString("dd")" @Model.CreatedDate?.ToString("MMMM") @Model.CreatedDate?.ToString("yyyy") р.</p>
            <p>(дата)</p>
        </div>
    </div>
</div>

<button class="btn btn-secondary print-button" type="button" onclick="window.print();">Друк</button>